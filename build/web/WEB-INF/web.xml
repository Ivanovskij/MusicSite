<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>pages/musics.jsp</welcome-file>
    </welcome-file-list>
    <!-- ================ Соединение БД ================= -->
    <resource-ref>
        <description>MySQL Datasource</description>
        <res-ref-name>jdbc/shmusic</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <!-- ================ СЕРВЛЕТЫ ================= -->
    <servlet>
        <servlet-name>MusicsController</servlet-name>
        <servlet-class>com.github.ivanovskij.controllers.servlets.MusicsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserAuthController</servlet-name>
        <servlet-class>com.github.ivanovskij.controllers.UserAuthController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LocaleChangerController</servlet-name>
        <servlet-class>com.github.ivanovskij.controllers.servlets.LocaleChangerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MusicsController</servlet-name>
        <url-pattern>/MusicsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserAuthController</servlet-name>
        <url-pattern>/UserAuthController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LocaleChangerController</servlet-name>
        <url-pattern>/LocaleChangerController</url-pattern>
    </servlet-mapping>
    <!-- ================ ФИЛЬТРЫ ================= -->
    <filter>
        <filter-name>AttributesToSessionFilters</filter-name>
        <filter-class>com.github.ivanovskij.filters.AttributesToSessionFilters</filter-class>
    </filter> 
    <filter-mapping>
        <filter-name>AttributesToSessionFilters</filter-name>
        <url-pattern>/pages/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CheckSessionFilter</filter-name>
        <filter-class>com.github.ivanovskij.filters.CheckSessionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckSessionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- ================ ШАБЛОН ================= -->
    <jsp-config>
        <jsp-property-group>
            <display-name>header_footer</display-name>
            <url-pattern>/pages/*</url-pattern>
            <page-encoding>utf-8</page-encoding>
            <include-prelude>/WEB-INF/jspf/header.jspf</include-prelude>
            <include-coda>/WEB-INF/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <context-param>
        <param-name>currentLocale</param-name>
        <param-value>ru</param-value>
    </context-param>
</web-app>
